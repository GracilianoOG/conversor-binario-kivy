<WindowLayout>:
    pos_hint: {"center_x": 0.5, "center_y": 0.5}
    size_hint: (0.9, 0.9)

    Label:
        bold: True
        font_name: "assets/fonts/raleway-v34-latin-700.ttf"
        font_size: 42
        halign: "center"
        pos_hint: {"center_x": 0.5, "center_y": 0.9}
        size_hint: (1, None)
        text: "Conversor Binário"
        text_size: self.size
    
    GridLayout:
        cols: 1
        pos_hint: {"center_x": 0.5, "center_y": 0.3}
        rows: 2
        spacing: 5

        Label:
            font_size: 18
            font_name: "assets/fonts/raleway-v34-latin-regular.ttf"
            halign: "left"
            size_hint: (1, None)
            text: "Valor para Conversão:"
            text_size: self.size

        TextInput:
            background_color: (1, 1, 1, 0)
            background_normal: ""
            color: (1, 1, 1, 1)
            font_size: 18
            font_name: "assets/fonts/raleway-v34-latin-regular.ttf"
            foreground_color: (1, 1, 1, 1)
            input_filter: "int"
            hint_text: "Ex.: 1234"
            hint_text_color: (1, 1, 1, 0.75)
            height: 60
            id: input
            multiline: False
            padding: (0, 20)
            size_hint: (1, None)
            canvas.after:
                Color:
                    rgba: 1, 1, 1, 1
                Line:
                    width: 1
                    points: self.x, self.y, self.x + self.width, self.y

    Label:
        bold: True
        font_size: 18
        font_name: "assets/fonts/raleway-v34-latin-700.ttf"
        halign: "center"
        id: output
        pos_hint: {"center_x": 0.5, "center_y": 0.3}
        size_hint: (1, None)
        text: "Efetue uma conversão"

    Button:
        background_color: "#023047"
        background_normal: ""
        bold: True
        color: "ffffff"
        font_size: 18
        font_name: "assets/fonts/raleway-v34-latin-700.ttf"
        height: 60
        on_release: root.on_convert_click()
        pos_hint: {"center_x": 0.5, "y": 0}
        size_hint: (1, None)
        text: "Converter"